<div class="container-fluid">
  <% if @recipes.empty? %>

<div class="text-decoration-none mb-5 mx-auto d-flex justify-content-center">
    <h2 class="text-center me-6">No recipes available</h2>
    <%= link_to "Add new recipe", new_recipe_path, class: 'btn btn-secondary text text-centet' %>
</div>

  <% else %>

    <h3 class="text-center text-[28px]">My Recipes</h3>
    <div class="text-end mb-3">
      <%= link_to "Add new recipe", new_recipe_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>

    <% @recipes.each do |recipe| %>
      <div class="py-8 flex flex-wrap md:flex-nowrap box-shadow px-5 gap-5 mt-2">
        <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col gap-4">
          <span class="font-semibold title-font text-gray-700"><%= recipe.name %></span>
          <div class="flex gap-1 flex-col">
                <%= link_to "Recipe Details", recipe_path(recipe.id), class: 'no-underline' %>
                    <%= button_to "Remove", recipe_path(recipe.id), class: 'btn bg-red-500 mt-2', method: :delete %>
          </div>
        </div>
        <div class="md:flex-grow">
        <p class="card-text"><%= recipe.description %></p>
        </div>
      </div>
    <% end %>

  <% end %>
</div>

