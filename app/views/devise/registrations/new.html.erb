<div class="w-[100%] h-[100vh] flex justify-center items-center">
<div class="box-shadow px-10 pt-2 pb-5">
<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field w-[100%]">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "w-[100%] py-1 mt-1 outline-none" %>
  </div>

  <div class="field w-[100%] mt-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-[100%] py-1 mt-1 outline-none" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-[100%] py-1 mt-1 outline-none" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-[100%] py-1 mt-1 outline-none" %>
  </div>

  <div class="actions mt-3 px-3">
    <%= f.submit "Sign up", class: "w-[100%]" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>